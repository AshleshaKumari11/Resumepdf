@model EmployeesDetails.EmployeeDetail

@{
    ViewBag.Title = "Details";
}

@*<h2>Details</h2>*@




<html>
<head>
    <title>Convert HTML To PDF</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">


    <style>
        .divname {
            column-count: 3;
            background-color: #000057;
            color: white;
            height: 60px;
            padding: 20px;
        }

        .btn {
            background-color: #c32148; /* Green */
            border: none;
            color: white;
            text-align: center;
            display: inline-block;
            font-size: 16px;
        }

        #EmailTd {
            padding-left: 10px;
        }

        #MobileTd {
            padding-left: 30px;
        }

        p {
            padding-top: 5px;
            padding-bottom: 5px;
        }

        td, th {
            padding-bottom: 10px;
        }

        .EmailTable {
            border: 1px solid
        }
        .prjtd {
            white-space: pre-line;
        }
    </style>
</head>
<body>


    <form class="form" style="max-width: none; width: 1005px;">

        <div contenteditable class="divname" rows>
            <p>@Html.DisplayFor(model => model.Name)</p>
        </div>

        <div style="width:100%; padding-top:10px;">
            <div style="float: left; width: 48%; padding-bottom: 10px; border: 1px solid;">

                <table>
                    <tr>
                        <th align="center"><span>Email :</span></th>
                        <td id="EmailTd" align="center">@Html.DisplayFor(model => model.Email)</td>
                    </tr>
                    <tr>
                        <th align="center"><span>Mobile :</span></th>
                        <td id="MobileTd" align="center">@Html.DisplayFor(model => model.Mobile)</td>
                    </tr>
                </table>
            </div>
            <div style="float:right; width:50%;border:1px solid;height:500px; ">
                <p style="background-color: #000057; color: white;">Selected Relevant Experience</p>
                <table>
                    <tr>
                        <td class="prjtd">@Html.DisplayFor(model => model.RelevantExperience)</td>
                    </tr>

                </table>
            </div>
        </div>
        <div style="width:48%; padding-top:10px;">
            <div style="float: left; width: 100%; padding-top: 10px; border: 1px solid; height: 235px; ">
                <p class="col-lg-12" style="background-color: #000057; color: white;">Professional Background</p>

                <table>
                    <tr>
                        <td class="prjtd">@Html.DisplayFor(model => model.ProjectDetails)</td>
                    </tr>
                </table>
            </div>

        </div>
        <div style="width:48%; padding-top:10px;">
            <div style="float: left; width: 100%; padding-top: 10px; border: 1px solid; height: 200px; ">
                <p class="col-lg-12" style="background-color: #000057; color: white;">Technical Experience</p>

                <table>
                    <tr>
                        <td class="prjtd">@Html.DisplayFor(model => model.TechnicalSkills)</td>
                    </tr>
                </table>
            </div>

        </div>
    </form>


</body>

</html>
